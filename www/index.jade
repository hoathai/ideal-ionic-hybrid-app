doctype html
html(ng-app='RASworkspaces' ng-controller='Base')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
		title
		link(href="css/hd.app.css" rel="stylesheet" ng-if="C_DesktopView")
		link(href="css/ionic.app.css" rel="stylesheet" ng-if="C_MobileView")
		
		// ionic/angularjs js
		script(src='lib/ionic/js/ionic.bundle.js')
		// cordova script (this will be a 404 during development)
		script(src='cordova.js')
		
		script(src='lib/angular-bootstrap/ui-bootstrap-tpls.js')
		
		// your app's js
		script(src='js/app.js')
		script(src='js/controllers.js')
		script(src='js/services.js')
	body(ng-class='{"desktop": C_DesktopView, "mobile": C_MobileView}')
		div(ui-view="header")
		
		ion-nav-bar.bar-stable
			ion-nav-back-button
		
		//
			### Views to render
		
		div(ng-if="C_DesktopView")
			div.main_hd(ui-view="content")
		
		div(ng-if="C_MobileView")
			ion-nav-view.main_mobile(name="content")
